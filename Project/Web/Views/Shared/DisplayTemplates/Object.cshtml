
@using Models;

@foreach (var prop in ViewData.ModelMetadata.Properties.Where(pm => pm.ShowForDisplay && !pm.ModelType.IsAbstract && !ViewData.TemplateInfo.Visited(pm)).OrderBy(a=>a.Order))
{

    <div class="form-group">
        <label class="col-sm-3 control-label" for="@prop.PropertyName"> @prop.DisplayName</label>
        <div class="col-sm-6" style="padding: 7px 15px">


            @if (prop.PropertyName == "CreatedBy" || prop.PropertyName == "UpdatedBy")
            {

                var dbsetbase = Model as DbSetBase;

                if (dbsetbase != null)
                {
                    @(prop.PropertyName == "CreatedBy" ? Html.DisplayFor(a => dbsetbase.UserCreatedBy) : Html.DisplayFor(a => dbsetbase.UserUpdatedBy))
                }
            }
            else
            {
                @Html.Display(prop.PropertyName)
            }
        </div>
    </div>

}
