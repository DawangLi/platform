@foreach (var prop in ViewData.ModelMetadata.Properties.Where(pm => pm.ShowForEdit && !pm.IsReadOnly && !pm.ModelType.IsAbstract && !ViewData.TemplateInfo.Visited(pm)).OrderBy(a => a.Order))
{
    <div class="form-group">
        <label class="col-sm-5 control-label" for="@prop.PropertyName">@(prop.IsRequired ? "*" : "") @prop.DisplayName</label>
        <div class="col-sm-4">
            @Html.Editor(prop.PropertyName, !string.IsNullOrEmpty(prop.TemplateHint)? prop.TemplateHint:prop.DataTypeName, new { placeholder =  prop.Description })
            <span class="help-block m-b-none"></span>
        </div>
        <div class="col-sm-3" style="padding: 7px 15px">
            @Html.ValidationMessage(prop.PropertyName)
        </div>
    </div>
}


