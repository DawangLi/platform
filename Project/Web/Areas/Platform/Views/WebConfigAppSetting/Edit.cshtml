@model System.Collections.Specialized.NameValueCollection

@{
    Layout = "../Shared/_LayoutForm.cshtml";
}

@using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "Main" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        @Html.Partial("_alerts")
        @Html.Partial("_validationSummary")
    </div>
    <div class="row">
        <div class="col-md-12  col-sm-12">
            <div class="row">
                <div class="col-md-1 col-sm-2 text-right">
                    <label for="value" style="padding-top: 8px;">* @ViewBag.id</label>
                </div>
                <div class="col-md-10 col-sm-8">
                    @Html.TextBox("value", null, new { @class = "form-control" })
                    @Html.ValidationMessage("value")
                </div>
                <div class="col-md-1 col-sm-2">
                    @Html.ValidationMessage("value")
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @Html.Partial("Button_Submit")
    </div>

}

